{
  "bitwise": true,
  "camelcase": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "noarg": true,
  "noempty": true,
  "undef": true,
  "unused": true,
  "trailing": true,
  "maxdepth": 4,
  "maxcomplexity": 4,
  "white": false,
  "sub": true,
  "evil": true,
  "globalstrict": true,
  "-W030": true,

  "globals": {
    "require": false,
    "module": false,
    "console": false,
    "process": false,
    "window": false,
    "document": false,
    "chrome": false,
    "React": false,

    "describe": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "it": false,
    "expect": false
  },

  "predef": [ "-Promise" ]
}
